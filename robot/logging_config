[formatters]
keys=default

[formatter_default]
format='%(asctime)s - %(levelname)s - %(message)s'

[handlers]
keys=timed, console

[handler_timed]
class=logging.handlers.TimedRotatingFileHandler
formatter=default
args=('robo.log', 'a')
level= DEBUG
when='D'
interval=1
backupCount=7

[handler_console]
class=logging.StreamHandler
level=INFO
formatter=default

[logger_root]
level=DEBUG
handlers=timed,console